---
import Layout from '../layouts/Layout.astro';

const pageTitle = "About Chicken Cabaret";
const pageDescription = "Discover the playful world of Chicken Cabaret, where poultry pop culture comes alive with vibrant cabaret flair and quirky animations.";
const missionItems = [
  {
    title: "Iconic Chicken Moments",
    description: "From Rocky the Rooster in films to the endless parade of feathered influencers on social media."
  },
  {
    title: "Quirky Animations",
    description: "Watch our animated chickens dance, sing, and strut their stuff with playful bouncy movements."
  },
  {
    title: "Poultry Pop Culture",
    description: "Celebrating the unexpected stories and memes that make chickens the stars of internet fame."
  }
];
const testimonials = [
  {
    quote: "Chicken Cabaret brought my chickens to life in ways I never imagined!",
    author: "Meredith Henley"
  },
  {
    quote: "The animations are absolutely mesmerizing. My rooster now has a Broadway career!",
    author: "Franklin Fowl"
  },
  {
    quote: "Finally, a place where chickens get the spotlight they deserve!",
    author: "Cluck Norris"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  {/* Hero Section */}
  <div class="relative overflow-hidden bg-gradient-to-br from-purple-900 via-pink-500 to-purple-800 py-24">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-10 left-10 w-32 h-32 rounded-full bg-yellow-300 animate-bounce"></div>
      <div class="absolute top-20 right-20 w-24 h-24 rounded-full bg-yellow-400 animate-ping"></div>
      <div class="absolute bottom-10 left-1/4 w-16 h-16 rounded-full bg-yellow-500 animate-pulse"></div>
      <div class="absolute bottom-20 right-1/3 w-20 h-20 rounded-full bg-yellow-300 animate-bounce delay-100"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10 text-center">
      <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 animate-fade-in-down">
        About Chicken Cabaret
      </h1>
      <p class="text-xl md:text-2xl text-yellow-200 max-w-3xl mx-auto mb-10 animate-fade-in-up">
        <i class="fas fa-feather-alt mr-2"></i>Cluck into the Feathered World of Poultry Pop Culture!
      </p>
      <div class="flex justify-center">
        <div class="w-24 h-1 bg-yellow-300 rounded-full animate-pulse"></div>
      </div>
    </div>
  </div>

  {/* Introduction Section */}
  <section class="py-16 bg-gradient-to-r from-purple-100 to-pink-100">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-purple-900 mb-6">
          Welcome to Chicken Cabaret!
        </h2>
        <div class="flex justify-center mb-8">
          <div class="w-16 h-1 bg-purple-600 rounded-full"></div>
        </div>
        <div class="bg-white p-6 md:p-10 rounded-2xl shadow-xl border-4 border-purple-300 transform hover:scale-105 transition duration-300">
          <p class="text-lg md:text-xl text-gray-700 leading-relaxed mb-4">
            *Cluck into the Feathered World of Poultry Pop Culture!*
          </p>
          <p class="text-lg text-gray-800 leading-relaxed">
            At Chicken Cabaret, we strut our stuff in a whirlwind of feathers, fun, and fabulous 
            fowl-inspired entertainment. Imagine a dazzling cabaret stage where chickens aren't just 
            farmyard friends—they're the stars of pop culture, from viral memes to blockbuster cameos. 
            Our vibrant, playful theme bursts with quirky animations that bring every cluck and peck to life.
          </p>
        </div>
      </div>
    </div>
  </section>

  {/* Mission Section */}
  <section class="py-16 bg-gradient-to-b from-purple-800 to-purple-900 text-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Our Feathered Mission</h2>
        <div class="w-24 h-1 bg-pink-400 mx-auto"></div>
        <p class="mt-6 text-purple-200 max-w-2xl mx-auto">
          We believe every chicken has a story worth crowing about. Founded on a passion for the unexpected,
          Chicken Cabaret celebrates the poultry world's hidden gems.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {missionItems.map((item, index) => (
          <div 
            key={index}
            class="bg-white bg-opacity-10 backdrop-blur-sm p-8 rounded-2xl border border-purple-500 transform hover:scale-105 transition-all duration-300 hover:bg-opacity-20"
          >
            <div class="text-4xl mb-4 text-yellow-300">
              <i class="fas fa-chicken"></i>
            </div>
            <h3 class="text-xl font-bold mb-3">{item.title}</h3>
            <p class="text-purple-100">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Stats Section */}
  <section class="py-16 bg-gradient-to-r from-pink-500 to-purple-600">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div class="p-6 bg-white bg-opacity-20 rounded-xl backdrop-blur-sm">
          <div class="text-4xl font-bold text-white mb-2">50K+</div>
          <div class="text-white">Feathered Fans</div>
        </div>
        <div class="p-6 bg-white bg-opacity-20 rounded-xl backdrop-blur-sm">
          <div class="text-4xl font-bold text-white mb-2">200+</div>
          <div class="text-white">Animated Scenes</div>
        </div>
        <div class="p-6 bg-white bg-opacity-20 rounded-xl backdrop-blur-sm">
          <div class="text-4xl font-bold text-white mb-2">1M+</div>
          <div class="text-white">Viral Moments</div>
        </div>
        <div class="p-6 bg-white bg-opacity-20 rounded-xl backdrop-blur-sm">
          <div class="text-4xl font-bold text-white mb-2">∞</div>
          <div class="text-white">Creative Ideas</div>
        </div>
      </div>
    </div>
  </section>

  {/* Testimonials */}
  <section class="py-16 bg-gradient-to-r from-purple-100 to-pink-100">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-purple-900 mb-4">What Our Chickens Say</h2>
        <div class="w-24 h-1 bg-purple-600 mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <div 
            key={index}
            class="bg-white p-8 rounded-2xl shadow-lg border-l-4 border-purple-500 transform hover:-translate-y-2 transition duration-300"
          >
            <div class="text-yellow-400 text-2xl mb-4">
              <i class="fas fa-quote-left"></i>
            </div>
            <p class="text-gray-700 italic mb-6">"{testimonial.quote}"</p>
            <div class="flex items-center">
              <div class="w-12 h-12 rounded-full bg-purple-200 flex items-center justify-center text-purple-700 mr-4">
                <i class="fas fa-chicken"></i>
              </div>
              <span class="font-bold text-purple-800">{testimonial.author}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* CTA Section */}
  <section class="py-20 bg-gradient-to-br from-purple-900 via-pink-600 to-purple-800 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-5xl font-bold mb-6 animate-bounce-slow">
        Ready to Join the Feathered Fun?
      </h2>
      <p class="text-xl mb-10 max-w-2xl mx-auto">
        Experience the magical world where chickens become stars and every animation tells a tale!
      </p>
      <button class="bg-yellow-400 hover:bg-yellow-300 text-purple-900 font-bold py-4 px-8 rounded-full text-lg transform hover:scale-110 transition duration-300 shadow-lg">
        <i class="fas fa-feather-alt mr-2"></i>Join the Cabaret Now!
      </button>
    </div>
  </section>
</Layout>

<style>
  @keyframes bounce-slow {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }
  
  @keyframes fade-in-down {
    from {
      opacity: 0;
      transform: translateY(-30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in-down {
    animation: fade-in-down 0.8s ease-out forwards;
  }
  
  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
  }
  
  .animate-bounce-slow {
    animation: bounce-slow 2s infinite;
  }
  
  .delay-100 {
    animation-delay: 0.1s;
  }
  
  .bg-gradient-to-br {
    background: linear-gradient(135deg, var(--tw-gradient-stops));
  }
  
  .bg-gradient-to-b {
    background: linear-gradient(to bottom, var(--tw-gradient-stops));
  }
  
  .bg-gradient-to-r {
    background: linear-gradient(to right, var(--tw-gradient-stops));
  }
  
  .bg-gradient-to-t {
    background: linear-gradient(to top, var(--tw-gradient-stops));
  }
</style>